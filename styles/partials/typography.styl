html, body, button, input, select, textarea
  color textColour
  font-family "Open Sans", sans-serif

html, body
  font-size scale0
  line-height 1.6
  font-size 16px

h1, h2, h3, h4, h5, h6
  font-weight 300

p
  text-align justify
  +below(mobile)
    text-align left

strong
  font-weight 700

a
  color inherit
  text-decoration none
  &:hover
    text-decoration none
    transition transition
  &:focus, &:hover, &:active
   outline 0

blockquote
  padding 0 0 0 16px
  margin 24px 0 24px 36px
  overflow hidden
  font-size scale1
  p
    margin 0 !important

ul
  list-style none
  margin 0
  padding 0
  li
    margin 0

hr
  display block
  height 1px
  border 0
  border-top 1px solid medGrey
  margin 1em 0
  padding 0