// global box-sizing
*
*:after
*:before
  box-sizing border-box
  -moz-osx-font-smoothing grayscale
  font-smoothing antialiased
  text-rendering optimizeLegibility


html
body
  height 100%
  width 100%
  background white

$clear
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both


// Content Wrapper
.wrapper
  @extend $clear
  max-width 1280px
  width 85%
  margin 0 auto
  display block


// Remove gap between elements and bottom of their containers
audio
canvas
img
video
  vertical-align middle

// Remove default fieldset styles
fieldset
  border 0
  margin 0
  padding 0

// Allow only vertical resizing of textareas.
textarea
  resize vertical